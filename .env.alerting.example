# Production Alerting System Configuration

# Enable/disable production alerting
PRODUCTION_ALERTING_ENABLED=true

# Email Notifications
EMAIL_ALERTS_ENABLED=true
ALERT_EMAIL_RECIPIENTS=admin@yourdomain.com,devops@yourdomain.com,security@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Webhook Notifications
WEBHOOK_ALERTS_ENABLED=true
ALERT_WEBHOOK_ENDPOINTS=[{"url":"https://your-webhook-endpoint.com/alerts","retryAttempts":3,"timeout":10000}]

# Slack Notifications
SLACK_ALERTS_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CRITICAL_CHANNEL=#critical-alerts
SLACK_WARNING_CHANNEL=#warnings
SLACK_SECURITY_CHANNEL=#security-alerts
SLACK_TRADING_CHANNEL=#trading-alerts

# Escalation Rules
CRITICAL_ESCALATION_TIMEOUT=15
EMERGENCY_ESCALATION_TIMEOUT=5
ALERT_MAX_RETRIES=3

# Performance Thresholds
ALERT_RESPONSE_TIME_THRESHOLD=2000
ALERT_MEMORY_USAGE_THRESHOLD=85
ALERT_CPU_USAGE_THRESHOLD=80
ALERT_DISK_USAGE_THRESHOLD=95

# Paper Trading Safety Thresholds
PAPER_TRADING_SAFETY_SCORE_THRESHOLD=90
REAL_TRADING_ATTEMPTS_THRESHOLD=0

# Database Performance Thresholds
DB_CONNECTION_POOL_THRESHOLD=80
DB_QUERY_TIME_THRESHOLD=1000

# Security Thresholds
FAILED_AUTH_RATE_THRESHOLD=0.5
RATE_LIMIT_VIOLATIONS_THRESHOLD=1

# Market Data Thresholds
MARKET_DATA_LATENCY_THRESHOLD=1000
WEBSOCKET_FAILURE_RATE_THRESHOLD=0.1

# Monitoring Intervals (in seconds)
SYSTEM_HEALTH_CHECK_INTERVAL=30
ESCALATION_CHECK_INTERVAL=60
PERFORMANCE_METRICS_INTERVAL=30