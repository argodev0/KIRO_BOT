# Production Environment Configuration
# Copy this file to .env.production and fill in actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3000
API_VERSION=v1
APP_NAME=ai-crypto-trading-bot

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary Database
DATABASE_URL=postgresql://username:password@db-primary:5432/trading_bot_prod
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50
DATABASE_TIMEOUT=30000

# Read Replica (for analytics queries)
DATABASE_READ_URL=postgresql://username:password@db-replica:5432/trading_bot_prod

# =============================================================================
# CACHE AND MESSAGE QUEUE
# =============================================================================
# Redis Configuration
REDIS_URL=redis://redis-cluster:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_POOL_SIZE=20

# RabbitMQ Configuration
RABBITMQ_URL=amqp://username:password@rabbitmq-cluster:5672
RABBITMQ_EXCHANGE=trading_bot_exchange
RABBITMQ_QUEUE_PREFIX=prod_

# =============================================================================
# EXCHANGE API CREDENTIALS (ENCRYPTED)
# =============================================================================
# Binance
BINANCE_API_KEY=encrypted_api_key_here
BINANCE_SECRET_KEY=encrypted_secret_key_here
BINANCE_TESTNET=false

# KuCoin
KUCOIN_API_KEY=encrypted_api_key_here
KUCOIN_SECRET_KEY=encrypted_secret_key_here
KUCOIN_PASSPHRASE=encrypted_passphrase_here
KUCOIN_SANDBOX=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm

# API Security
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_SKIP_SUCCESSFUL=true

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=30
LOG_MAX_SIZE=100m

# Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_PREFIX=trading_bot_

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Risk Management
MAX_POSITION_SIZE_PERCENT=3
MAX_DAILY_LOSS_PERCENT=5
MAX_TOTAL_EXPOSURE=5
EMERGENCY_STOP_LOSS_PERCENT=10

# Signal Generation
SIGNAL_CONFIDENCE_THRESHOLD=0.7
SIGNAL_COOLDOWN_PERIOD=300000
MAX_CONCURRENT_SIGNALS=10

# Grid Trading
GRID_MAX_LEVELS=20
GRID_MIN_SPACING_PERCENT=0.5
GRID_MAX_INVESTMENT_PERCENT=20

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_smtp_password

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#trading-alerts
SLACK_USERNAME=TradingBot

# SMS Alerts (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=trading-bot-backups

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Node.js Performance
UV_THREADPOOL_SIZE=128
NODE_OPTIONS=--max-old-space-size=4096

# Application Performance
WORKER_PROCESSES=4
CLUSTER_MODE=true
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# Cache Settings
CACHE_TTL_DEFAULT=300
CACHE_TTL_MARKET_DATA=5
CACHE_TTL_ANALYSIS=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_GRID_TRADING=true
FEATURE_ELLIOTT_WAVE=true
FEATURE_FIBONACCI_ANALYSIS=true
FEATURE_PATTERN_RECOGNITION=true
FEATURE_ML_SIGNALS=true
FEATURE_MULTI_EXCHANGE=true
FEATURE_PAPER_TRADING=false

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# =============================================================================
# DEVELOPMENT/DEBUG (PRODUCTION: false)
# =============================================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false
MOCK_EXCHANGES=false