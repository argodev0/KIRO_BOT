# Development Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading_bot_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_bot_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Security Configuration
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=dev-encryption-key-32-chars-long
SESSION_SECRET=dev-session-secret-change-in-prod

# Exchange API Configuration (Testnet)
BINANCE_API_KEY=your-binance-testnet-api-key
BINANCE_API_SECRET=your-binance-testnet-api-secret
BINANCE_TESTNET=true

KUCOIN_API_KEY=your-kucoin-sandbox-api-key
KUCOIN_API_SECRET=your-kucoin-sandbox-api-secret
KUCOIN_PASSPHRASE=your-kucoin-sandbox-passphrase
KUCOIN_SANDBOX=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9464
HEALTH_CHECK_PORT=8080

# Development Features
DEBUG_MODE=true
HOT_RELOAD=true
MOCK_EXCHANGES=true
SIMULATE_TRADING=true

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# Notification Configuration
EMAIL_ENABLED=false
SMS_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=false

# Email Configuration (Development)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=dev-email@example.com
SMTP_PASSWORD=dev-password

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
DB_POOL_SIZE=5
REDIS_POOL_SIZE=5

# SSL Configuration
SSL_ENABLED=false

# Cache Configuration
CACHE_TTL=60
CACHE_MAX_SIZE=50mb

# Trading Configuration
MAX_POSITION_SIZE=100
MAX_DAILY_TRADES=50
RISK_LIMIT_PERCENT=1

# Security Headers (Relaxed for development)
HELMET_ENABLED=false
HSTS_MAX_AGE=0
CSP_ENABLED=false

# Session Configuration
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=false
API_COMPRESSION=false

# Cluster Configuration
CLUSTER_MODE=false
WORKER_PROCESSES=1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Graceful Shutdown
SHUTDOWN_TIMEOUT=10000
KEEP_ALIVE_TIMEOUT=5000