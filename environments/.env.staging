# Staging Environment Configuration
NODE_ENV=staging
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres-service:5432/trading_bot_staging
POSTGRES_HOST=postgres-service
POSTGRES_PORT=5432
POSTGRES_DB=trading_bot_staging
POSTGRES_USER=postgres
# POSTGRES_PASSWORD set via secrets

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis-service:6379
REDIS_HOST=redis-service
REDIS_PORT=6379
# REDIS_PASSWORD set via secrets

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:${RABBITMQ_PASSWORD}@rabbitmq-service:5672
RABBITMQ_HOST=rabbitmq-service
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
# RABBITMQ_PASSWORD set via secrets

# Security Configuration
# JWT_SECRET set via secrets
JWT_EXPIRES_IN=12h
# ENCRYPTION_KEY set via secrets
# SESSION_SECRET set via secrets

# Exchange API Configuration (Testnet)
# BINANCE_API_KEY set via secrets
# BINANCE_API_SECRET set via secrets
BINANCE_TESTNET=true

# KUCOIN_API_KEY set via secrets
# KUCOIN_API_SECRET set via secrets
# KUCOIN_PASSPHRASE set via secrets
KUCOIN_SANDBOX=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9464
HEALTH_CHECK_PORT=8080

# Staging Features
DEBUG_MODE=false
HOT_RELOAD=false
MOCK_EXCHANGES=false
SIMULATE_TRADING=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=500

# CORS Configuration
CORS_ORIGIN=https://staging.trading-bot.yourdomain.com
CORS_CREDENTIALS=true

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# Notification Configuration
EMAIL_ENABLED=true
SMS_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=true

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
# SMTP_USER set via secrets
# SMTP_PASSWORD set via secrets

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=14
# AWS credentials set via secrets

# Performance Configuration
MAX_CONCURRENT_REQUESTS=200
REQUEST_TIMEOUT=30000
DB_POOL_SIZE=15
REDIS_POOL_SIZE=15

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100mb

# Trading Configuration
MAX_POSITION_SIZE=1000
MAX_DAILY_TRADES=100
RISK_LIMIT_PERCENT=2