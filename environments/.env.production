# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres-service:5432/trading_bot
POSTGRES_HOST=postgres-service
POSTGRES_PORT=5432
POSTGRES_DB=trading_bot
POSTGRES_USER=postgres
# POSTGRES_PASSWORD set via secrets

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis-service:6379
REDIS_HOST=redis-service
REDIS_PORT=6379
# REDIS_PASSWORD set via secrets

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:${RABBITMQ_PASSWORD}@rabbitmq-service:5672
RABBITMQ_HOST=rabbitmq-service
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
# RABBITMQ_PASSWORD set via secrets

# Security Configuration
# JWT_SECRET set via secrets (strong random string)
JWT_EXPIRES_IN=8h
# ENCRYPTION_KEY set via secrets (32 character key)
# SESSION_SECRET set via secrets

# Exchange API Configuration (Production)
# BINANCE_API_KEY set via secrets
# BINANCE_API_SECRET set via secrets
BINANCE_TESTNET=false

# KUCOIN_API_KEY set via secrets
# KUCOIN_API_SECRET set via secrets
# KUCOIN_PASSPHRASE set via secrets
KUCOIN_SANDBOX=false

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=logs/app.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=20

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9464
HEALTH_CHECK_PORT=8080

# Production Features
DEBUG_MODE=false
HOT_RELOAD=false
MOCK_EXCHANGES=false
SIMULATE_TRADING=false

# Rate Limiting (Strict)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://trading-bot.yourdomain.com
CORS_CREDENTIALS=true

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Notification Configuration
EMAIL_ENABLED=true
SMS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
# SMTP_USER set via secrets
# SMTP_PASSWORD set via secrets

# SMS Configuration (Twilio)
# TWILIO_ACCOUNT_SID set via secrets
# TWILIO_AUTH_TOKEN set via secrets
# TWILIO_PHONE_NUMBER set via secrets

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
# AWS credentials set via secrets

# Performance Configuration
MAX_CONCURRENT_REQUESTS=500
REQUEST_TIMEOUT=30000
DB_POOL_SIZE=25
REDIS_POOL_SIZE=25

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/production.crt
SSL_KEY_PATH=/etc/ssl/private/production.key

# Cache Configuration
CACHE_TTL=600
CACHE_MAX_SIZE=500mb

# Trading Configuration
MAX_POSITION_SIZE=10000
MAX_DAILY_TRADES=500
RISK_LIMIT_PERCENT=3

# Security Headers
HELMET_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=true
API_COMPRESSION=true

# Cluster Configuration
CLUSTER_MODE=true
WORKER_PROCESSES=auto

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000