# Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values

# ===== CRITICAL PAPER TRADING SAFETY CONFIGURATION =====
# These MUST be set to ensure paper trading mode
PAPER_TRADING_MODE=true
ALLOW_REAL_TRADES=false
FORCE_PAPER_TRADING=true
TRADING_SIMULATION_ONLY=true
PAPER_TRADING_VALIDATION=strict

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ===== DATABASE CONFIGURATION =====
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/trading_bot
DATABASE_SSL=false
DATABASE_POOL_SIZE=20

# ===== CACHE AND MESSAGE QUEUE =====
REDIS_PASSWORD=your-secure-redis-password-here
RABBITMQ_USER=your-rabbitmq-username
RABBITMQ_PASSWORD=your-secure-rabbitmq-password

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
ENCRYPTION_KEY=your-encryption-key-change-in-production-minimum-32-characters
BCRYPT_ROUNDS=12
HELMET_ENABLED=true
CSRF_PROTECTION=true

# ===== EXCHANGE API CONFIGURATION (READ-ONLY FOR PAPER TRADING) =====
# Binance Configuration
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
BINANCE_SANDBOX=false
BINANCE_MAINNET=true
BINANCE_READ_ONLY=true

# KuCoin Configuration
KUCOIN_API_KEY=your-kucoin-api-key
KUCOIN_API_SECRET=your-kucoin-api-secret
KUCOIN_PASSPHRASE=your-kucoin-passphrase
KUCOIN_SANDBOX=false
KUCOIN_MAINNET=true
KUCOIN_READ_ONLY=true

# ===== MONITORING CONFIGURATION =====
MONITORING_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=info
LOG_FORMAT=json
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# ===== PAPER TRADING SIMULATION CONFIGURATION =====
VIRTUAL_BALANCE_USD=100000
VIRTUAL_BALANCE_BTC=10
VIRTUAL_BALANCE_ETH=100
TRADING_FEE_SIMULATION=0.001
SLIPPAGE_SIMULATION=0.0005
PAPER_TRADE_AUDIT_LOG=true

# ===== SSL AND DOMAIN CONFIGURATION =====
DOMAIN_NAME=your-domain.com
SSL_ENABLED=true
LETSENCRYPT_EMAIL=your-email@domain.com

# ===== GRAFANA CONFIGURATION =====
GRAFANA_PASSWORD=your-secure-grafana-password

# ===== BACKUP CONFIGURATION =====
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

