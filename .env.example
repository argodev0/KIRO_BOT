# AI Crypto Trading Bot Environment Configuration

# Application
NODE_ENV=development
PORT=3000
HOST=localhost

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/trading_bot

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Exchange API Keys (Binance)
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
BINANCE_SANDBOX=true

# Exchange API Keys (KuCoin)
KUCOIN_API_KEY=your-kucoin-api-key
KUCOIN_API_SECRET=your-kucoin-api-secret
KUCOIN_PASSPHRASE=your-kucoin-passphrase
KUCOIN_SANDBOX=true

# Monitoring
PROMETHEUS_PORT=9090
LOG_LEVEL=info

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100