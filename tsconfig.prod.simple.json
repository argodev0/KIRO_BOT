{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/index.ts",
    "src/config/**/*",
    "src/middleware/**/*",
    "src/routes/**/*",
    "src/utils/**/*",
    "src/types/**/*",
    "src/services/AuthService.ts",
    "src/services/AuditLogService.ts",
    "src/services/NotificationService.ts",
    "src/services/SystemHealthService.ts",
    "src/services/MonitoringService.ts",
    "src/services/PrometheusMetricsService.ts",
    "src/services/ProductionAlertingService.ts",
    "src/services/SecurityMonitoringService.ts",
    "src/services/WebSocketServer.ts",
    "src/services/EnhancedWebSocketService.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/test/**/*",
    "src/frontend/**/*",
    "src/examples/**/*",
    "src/services/LiveMarketDataIntegration.ts",
    "src/services/LiveMarketDataService.ts",
    "src/services/MarketDataService.ts",
    "src/services/TradingExecutionService.ts",
    "src/services/VisualizationService.ts",
    "src/services/ReportGeneratorService.ts",
    "src/services/ProductionLoggingService.ts",
    "src/services/LogAggregationService.ts",
    "src/services/VirtualPortfolioWebSocketService.ts",
    "src/services/exchanges/**/*",
    "src/services/indicators/**/*"
  ]
}